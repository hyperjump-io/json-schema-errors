{
  "$schema": "../test-suite.schema.json",

  "description": "The maximum and exclusiveMaximum keywords",
  "tests": [
    {
      "description": "maximum",
      "schema": {
        "maximum": 3
      },
      "instance": 4,
      "errors": [
        {
          "messageId": "maximum-message",
          "messageParams": {
            "maximum": "3"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/maximum"]
        }
      ]
    },
    {
      "description": "maximum pass",
      "schema": {
        "maximum": 3
      },
      "instance": 3,
      "errors": []
    },
    {
      "description": "exclusiveMaximum",
      "compatibility": "6",
      "schema": {
        "exclusiveMaximum": 3
      },
      "instance": 3,
      "errors": [
        {
          "messageId": "exclusiveMaximum-message",
          "messageParams": {
            "exclusiveMaximum": "3"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/exclusiveMaximum"]
        }
      ]
    },
    {
      "description": "exclusiveMaximum pass",
      "compatibility": "6",
      "schema": {
        "exclusiveMaximum": 3
      },
      "instance": 2,
      "errors": []
    },
    {
      "description": "boolean exclusiveMaximum",
      "compatibility": "=4",
      "schema": {
        "maximum": 3,
        "exclusiveMaximum": true
      },
      "instance": 3,
      "errors": [
        {
          "messageId": "exclusiveMaximum-message",
          "messageParams": {
            "exclusiveMaximum": "3"
          },
          "instanceLocation": "#",
          "schemaLocations": [
            "#/maximum",
            "#/exclusiveMaximum"
          ]
        }
      ]
    },
    {
      "description": "boolean exclusiveMaximum pass",
      "compatibility": "=4",
      "schema": {
        "maximum": 3,
        "exclusiveMaximum": true
      },
      "instance": 2,
      "errors": []
    },
    {
      "description": "maximum with multiple constraints (lowest value considered)",
      "schema": {
        "allOf": [{ "maximum": 3 }, { "maximum": 2 }]
      },
      "instance": 6,
      "errors": [
        {
          "messageId": "maximum-message",
          "messageParams": {
            "maximum": "2"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/1/maximum"]
        }
      ]
    },
    {
      "description": "exclusiveMaximum with multiple constraints (lowest value considered)",
      "compatibility": "6",
      "schema": {
        "allOf": [{ "exclusiveMaximum": 3 }, { "exclusiveMaximum": 2 }]
      },
      "instance": 6,
      "errors": [
        {
          "messageId": "exclusiveMaximum-message",
          "messageParams": {
            "maximum": "2"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/1/exclusiveMaximum"]
        }
      ]
    },
    {
      "description": "combined maximum and exclusive maximum with draft04 compatiblity",
      "compatibility": "=4",
      "schema": {
        "allOf": [
          { "maximum": 2, "exclusiveMaximum": true },
          { "maximum": 4 }
        ]
      },
      "instance": 5,
      "errors": [
        {
          "messageId": "exclusiveMaximum-message",
          "messageParams": {
            "maximum": "2"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/0/maximum"]
        }
      ]
    },
    {
      "description": "combined maximum and exclusive maximum ",
      "compatibility": "6",
      "schema": {
        "allOf": [{ "maximum": 3 }, { "maximum": 2 }, { "exclusiveMaximum": 5 }]
      },

      "instance": 6,
      "errors": [
        {
          "messageId": "maximum-message",
          "messageParams": {
            "maximum": "2"
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/1/maximum"]
        }
      ]
    }
  ]
}
