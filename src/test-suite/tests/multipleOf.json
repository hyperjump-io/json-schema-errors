{
  "$schema": "../test-suite.schema.json",

  "description": "The multipleOf keyword",
  "tests": [
    {
      "description": "multipleOf",
      "schema": {
        "multipleOf": 3
      },
      "instance": 4,
      "errors": [
        {
          "messageId": "multipleOf-message",
          "messageParams": { "multipleOf": "3" },
          "instanceLocation": "#",
          "schemaLocations": ["#/multipleOf"]
        }
      ]
    },
    {
      "description": "multipleOf pass",
      "schema": {
        "multipleOf": 3
      },
      "instance": 6,
      "errors": []
    },
    {
      "description": "multiple multipleOf constraints (LCM of 4, 6, and 8)",
      "schema": {
        "allOf": [
          { "multipleOf": 4 },
          { "multipleOf": 6 },
          { "multipleOf": 8 }
        ]
      },
      "instance": 10,
      "errors": [
        {
          "messageId": "multipleOf-message",
          "messageParams": { "multipleOf": "24" },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/0/multipleOf", "#/allOf/1/multipleOf", "#/allOf/2/multipleOf"]
        }
      ]
    },
    {
      "description": "multiple decimal multipleOf constraints (LCM of 0.2 and 0.3)",
      "schema": {
        "allOf": [
          { "multipleOf": 0.2 },
          { "multipleOf": 0.3 }
        ]
      },
      "instance": 0.7,
      "errors": [
        {
          "messageId": "multipleOf-message",
          "messageParams": { "multipleOf": "0.6" },
          "instanceLocation": "#",
          "schemaLocations": ["#/allOf/0/multipleOf", "#/allOf/1/multipleOf"]
        }
      ]
    }
  ]
}
