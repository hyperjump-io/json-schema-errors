{
  "$schema": "../test-suite.schema.json",

  "description": "The dependentRequired keyword",
  "tests": [
    {
      "description": "dependentRequired",
      "compatibility": "2019",
      "schema": {
        "dependentRequired": {
          "foo": ["bar", "baz"],
          "aaa": ["bbb"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": 1,
            "required": { "or": ["baz"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependentRequired"]
        }
      ]
    },
    {
      "description": "dependentRequired pass",
      "compatibility": "2019",
      "schema": {
        "dependentRequired": {
          "foo": ["bar"]
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    }
  ]
}
