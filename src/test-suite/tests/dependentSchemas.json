{
  "$schema": "../test-suite.schema.json",

  "description": "The dependentSchemas keyword",
  "tests": [
    {
      "description": "dependentSchemas",
      "compatibility": "2019",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar", "baz"] },
          "aaa": { "required": ["bbb"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": [
        {
          "messageId": "required-message",
          "messageParams": {
            "count": "1",
            "required": { "or": ["baz"] }
          },
          "instanceLocation": "#",
          "schemaLocations": ["#/dependentSchemas/foo/required"]
        }
      ]
    },
    {
      "description": "dependentSchemas on a non-object",
      "compatibility": "2019",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": 42,
      "errors": []
    },
    {
      "description": "dependentSchemas pass",
      "schema": {
        "dependentSchemas": {
          "foo": { "required": ["bar"] }
        }
      },
      "instance": {
        "foo": 42,
        "bar": true
      },
      "errors": []
    }
  ]
}
