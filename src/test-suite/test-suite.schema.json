{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "type": "object",
  "properties": {
    "description": { "type": "string" },
    "tests": {
      "type": "array",
      "items": { "$ref": "#/$defs/test-case" }
    }
  },
  "required": ["description", "tests"],

  "$defs": {
    "test-case": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "compatibility": {
          "type": "string",
          "examples": [
            "7",
            "2020",
            "<=2019",
            "6,<=2019",
            "=2020"
          ]
        },
        "schema": { "type": ["object", "boolean"] },
        "instance": {},
        "errors": {
          "type": "array",
          "items": { "$ref": "#/$defs/error" }
        }
      },
      "required": ["description", "schema", "instance", "errors"]
    },
    "error": {
      "type": "object",
      "properties": {
        "messageId": { "type": "string" },
        "messageParams": { "$ref": "#/$defs/message-params" },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "$ref": "#/$defs/error" }
          }
        },
        "instanceLocation": { "type": "string" },
        "schemaLocations": {
          "type": "array",
          "items": {
            "type": "string",
            "if": { "pattern": "^#" },
            "then": { "format": "iri-reference" },
            "else": { "format": "iri" }
          }
        }
      }
    },
    "message-params": {
      "type": "object",
      "patternProperties": {
        "": {
          "if": { "type": "object" },
          "then": {
            "properties": {
              "or": {
                "type": "array",
                "items": { "type": "string" }
              },
              "and": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "maxProperties": 1
          },
          "else": {
            "type": ["string", "number"]
          }
        }
      }
    }
  }
}
